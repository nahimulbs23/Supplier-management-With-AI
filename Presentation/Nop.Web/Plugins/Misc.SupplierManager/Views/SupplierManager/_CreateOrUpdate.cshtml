@model Nop.Plugin.Misc.SupplierManager.Models.SupplierModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" asp-required="true" asp-hint="@T("Plugins.Misc.SupplierManager.Fields.Name.Hint")" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Email" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Email" asp-required="true" asp-hint="@T("Plugins.Misc.SupplierManager.Fields.Email.Hint")" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="PhoneNumber" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PhoneNumber" asp-required="true" asp-hint="@T("Plugins.Misc.SupplierManager.Fields.PhoneNumber.Hint")" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Address" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Address" asp-required="true" asp-hint="@T("Plugins.Misc.SupplierManager.Fields.Address.Hint")" />
            <span asp-validation-for="Address"></span>
        </div>
    </div>
</div> 